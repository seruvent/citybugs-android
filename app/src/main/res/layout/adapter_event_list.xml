<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_product_list_item_image"
        android:layout_width="120dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="100dp"
        android:src="@mipmap/seruvent_citybugs_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_product_list_item_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:text="@string/unknown_name"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/activity_product_list_item_product_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="@string/unknown_name"
            android:textColor="#E3D6BF"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/activity_product_list_item_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:text="@string/unknown_name"
            android:textStyle="bold"
            android:textColor="#31AC7A"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>

